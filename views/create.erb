<div class ='create_container'>
  <div class = 'row'>
    <%= session[:message] %>
    <% session[:message] = "" %>
  </div>

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <h3>Create Question Set:</h3>
    <form action="/create-qset" class="form-inline" method="POST" role="form">
      <div class="form-group" id="qset-form">
          <label class="col-sm-2 control-label" for="qset_name">Name: </label>
          <div class="col-sm-10">
            <input class="form-control" type="text" name="qset_name" id="qset_name" placeholder="biology">
            <input class="btn btn-primary" type="submit" value="create a question set">
          </div>
      </div>
    </form>
    <div class="col-md-3"></div>
  </div>
  <div class="col-md-2"></div>
  </div>
  <%@question_set_message if @question_set_message!=nil %>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <h3>Create a question:</h3>
    <form action="/create-question" class="form-horizontal" method="POST" role="form">
      <div class="form-group">
        <label class="col-sm-2 control-label" for="question_text">Question: </label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="question_text" id="question_text">
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="answer">Answer: </label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="answer" id="answer">
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="question_set">Question Set: </label>
        <div class="col-sm-10">
          <select name="question_set" id="" class="form-control">
            <% if @question_sets.count > 0 %>
              <% @question_sets.each do |qset| %>
                <option value="<%= qset.name %>"><%= qset.name %></option>
              <% end %>
            <% end %>
          </select>
          <!-- <input class="form-control" type="text" name="question_set" id="question_set"> -->
        </div>
      </div>
      <input class="btn btn-primary btn-lg btn-block block-submit" type="submit" value="Create Question">
    </form>
    <div class="col-md-3"></div>
  </div>
  <%@question_message if @question_message!=nil %>
  <div class="col-md-2"></div>
  </div>
</div>
