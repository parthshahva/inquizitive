<h1>Create Question</h1>

<div><%= @message %></div>

<form action="/create-question" method="POST">
  <label for="question_set">Question Set:</label>
  <input type="text" name="question_set" id="question_set">

  <label for="question">Question:</label>
  <input type="text" name="question_text" id="question_text">

  <label for="answer">Answer</label>
  <input type="text" name="answer" id="answer">

  <input type="submit" value="Question">
</form>
